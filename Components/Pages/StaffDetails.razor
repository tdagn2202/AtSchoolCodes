@page "/staffdetails/{id}"
@inherits StaffDetailsBase

@if (staff == null)
{
    <div class="d-flex justify-content-center align-items-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card shadow-lg rounded-3 border-0">
                <!-- Profile Picture with a placeholder fallback -->
                @* <img class="card-img-top rounded-circle mx-auto mt-3" style="width: 150px; height: 150px; object-fit: cover;"  *@
                     @* src="@staff.Photo" onerror="this.onerror=null;this.src='/images/placeholder.jpg';" alt="Staff Photo" /> *@
                <div class="card-body text-center">
                    <h1 class="card-title text-dark font-weight-bold">@staff.FirstName @staff.LastName</h1>
                    @* <p class="text-muted">@staff.Position</p> *@
                    <div class="mb-3">
                        <h5 class="text-secondary">Staff ID: @staff.EmployeeId</h5>
                        <h5 class="text-secondary">Email: @staff.Email</h5>
                        <h5 class="text-secondary">Starting Date: @staff.StartingDate.ToString("MMM dd, yyyy")</h5>
                        <h5 class="text-secondary">Department: @staff.DepartmentId</h5>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="/stafflist" class="btn btn-outline-primary btn-sm w-100 mb-2 mb-md-0 transition-transform transform-hover">Back</a>
                    <a href="@($"editstaff/{staff.EmployeeId}")" class="btn btn-outline-warning btn-sm w-100 mb-2 mb-md-0 transition-transform transform-hover">Edit</a>
                    <a href="#" class="btn btn-outline-danger btn-sm w-100 mb-2 mb-md-0 transition-transform transform-hover">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
